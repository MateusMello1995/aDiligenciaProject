<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F53D3D"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="319dp"
        android:layout_height="170dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="19dp"
        android:background="#F53D3D"
        android:drawableLeft="@drawable/emailbranco"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="10dp"
        android:background="#F53D3D"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button2"
        android:layout_width="181dp"
        android:layout_height="36dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="8dp"
        android:background="#F53D3D"
        android:text="esqueceu sua senha?"
        android:textColor="#EEECEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="20dp"
        android:text="OU ACESSE COM:"
        android:textColor="#F3F3F3"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angry_btn" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="29dp"
        android:background="#BF271F"
        android:drawableTop="@drawable/facebookbranco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button5"
        android:layout_width="104dp"
        android:layout_height="44dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        android:background="#BF271F"
        android:drawableBottom="@drawable/googleplusbranco"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="40dp"
        android:text="Não é cadastrado?"
        android:textColor="#EFEDF1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="109dp"
        android:background="#F53D3D"
        android:text="CADASTRE-SE"
        android:textColor="#FAFAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/angry_btn"

        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="46dp"

        android:layout_marginTop="17dp"
        android:background="@drawable/buttonshape2"
        android:drawableBottom="@drawable/enter"
        android:text="ENTRAR"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>