<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="319dp"
        android:layout_height="170dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="136dp"
        android:contentDescription="@string/imagemLogo"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/emailbranco"
        android:ems="10"
        android:hint="@string/campoEmail"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorBranco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/lock"
        android:ems="10"
        android:hint="@string/campoSenha"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button2"
        android:layout_width="181dp"
        android:layout_height="36dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorTransparente"
        android:text="@string/campoEsqueceu"
        android:textColor="#EEECEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorTransparente"
        android:text="@string/campoAcesse"
        android:textColor="#F3F3F3"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaocad" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="54dp"
        android:background="@color/colorTransparente"
        android:text="@string/campoPergunta"
        android:textColor="#EFEDF1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="43dp"
        android:background="@color/colorTransparente"
        android:onClick="proximaTela1"
        android:text="@string/campoCadastro"
        android:textColor="#FAFAFA"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

    <Button
        android:id="@+id/botaocad"

        android:layout_width="320dp"
        android:layout_height="45dp"

        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonshape2"
        android:drawableStart="@drawable/enter"
        android:drawablePadding="3dp"
        android:onClick="proximaTela"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="@string/btnEntrar"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"

        android:background="@color/colorVermelhoEscuro"
        android:onClick="proximaTela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/facebookbranco" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"

        android:layout_marginTop="24dp"
        android:background="@color/colorVermelhoEscuro"
        android:onClick="proximaTela2"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/googleplusbranco" />

</androidx.constraintlayout.widget.ConstraintLayout>